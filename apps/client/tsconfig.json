{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"jsx": "react-native",
		"allowSyntheticDefaultImports": true
	},

	"include": ["src", "expo-plugins", "app.config.ts", "index.ts"],
	"exclude": ["node_modules", ".dump"],

	"baseUrl": "./src",
	"paths": {
		"$context/*": ["context/*"],
		"$hooks/*": ["theme/*", "hooks/*"],
		"$types/*": ["types/*"],
		"$types/redux": ["store/types"],
		"$svg": ["assets/svg/index"],
		"$utils/*": ["utils/*"],
		"$mock/*": ["mock/*"],
		"$constants": ["constants"]
	}
}
